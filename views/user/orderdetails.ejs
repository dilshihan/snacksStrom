  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const trackButtons = document.querySelectorAll('.track-btn');
      const modal = document.getElementById('trackingModal');
      const closeBtn = modal.querySelector('.tracking-close');

      function positionConnectingLines() {
        const steps = document.querySelectorAll('.step');
        const connections = document.querySelectorAll('.step-connection');

        connections.forEach((connection, index) => {
          if (index < steps.length - 1) {
            const currentStep = steps[index];
            const nextStep = steps[index + 1];
            const topPosition = currentStep.offsetTop + 30;

            connection.style.top = topPosition + 'px';
            connection.style.height = (nextStep.offsetTop - topPosition) + 'px';
          }
        });
      }

      trackButtons.forEach(button => {
        button.addEventListener('click', function () {
          modal.style.display = 'block';
          setTimeout(positionConnectingLines, 100);
        });
      });

      // Position lines on window resize
      window.addEventListener('resize', positionConnectingLines);

      // Close the modal when clicked on X
      closeBtn.addEventListener('click', function () {
        modal.style.display = 'none';
      });

      // Close the modal when clicked outside
      window.addEventListener('click', function (event) {
        if (event.target === modal) {
          modal.style.display = 'none';
        }
      });
    });
  </script>
