  <!-- Tracking Modal -->
  <div id="trackingModal" class="tracking-modal">
    <div class="tracking-modal-content">
      <span class="tracking-close">&times;</span>
      <h2>Order Tracking</h2>
      <p>Order ID: #<%= order._id ? order._id.toString().slice(-6).toUpperCase() : 'N/A' %>
      </p>

      <div class="tracking-steps">
        <!-- Order Placed -->
        <div class="step active">
          <div class="step-number">1</div>
          <div class="step-content">
            <h4>Order Placed</h4>
            <p>Your order has been placed successfully.</p>
            <p class="step-date">
              <%= new Date(order.orderDate).toLocaleString() %>
            </p>
          </div>
        </div>
        <div
          class="step-connection <%= productDetails.status  === 'Processing' || productDetails.status  === 'Shipped' || productDetails.status === 'Delivered' ? 'active' : '' %>">
        </div>
        <!-- Order Processing -->
        <div
          class="step <%=productDetails.status === 'Processing' || productDetails.status  === 'Shipped' ||productDetails.status  === 'Delivered' ? 'active' : '' %>">
          <div class="step-number">2</div>
          <div class="step-content">
            <h4>Processing</h4>
            <p>Your order is being prepared in the kitchen.</p>
            <% if (productDetails.status==='Processing' ||productDetails.status==='Shipped'
              ||productDetails.status==='Delivered' ) { %>
              <p class="step-date">
                <%= new Date(order.processingDate || new Date(order.orderDate).getTime() + 15 * 60000).toLocaleString()
                  %>
              </p>
              <% } %>
          </div>
        </div>
        <div
          class="step-connection <%= productDetails.status === 'Shipped' || productDetails.status  === 'Delivered' ? 'active' : '' %>">
        </div>
        <!-- Order Shipped -->
        <div
          class="step <%= productDetails.status === 'Shipped' || productDetails.status === 'Delivered' ? 'active' : '' %>">
          <div class="step-number">3</div>
          <div class="step-content">
            <h4>Out for Delivery</h4>
            <p>Your food is on the way to you.</p>
            <% if (productDetails.status==='Shipped' || productDetails.status==='Delivered' ) { %>
              <p class="step-date">
                <%= new Date(order.shippedDate || new Date(order.orderDate).getTime() + 30 * 60000).toLocaleString() %>
              </p>
              <% } %>
          </div>
        </div>
        <div class="step-connection <%= productDetails.status  === 'Delivered' ? 'active' : '' %>"></div>
        <!-- Order Delivered -->
        <div class="step <%= productDetails.status  === 'Delivered' ? 'active' : '' %>">
          <div class="step-number">4</div>
          <div class="step-content">
            <h4>Delivered</h4>
            <p>Your food has been delivered. Enjoy!</p>
            <% if (productDetails.status==='Delivered' ) { %>
              <p class="step-date">
                <%= new Date(order.deliveredDate || new Date(order.orderDate).getTime() + 45 * 60000).toLocaleString()
                  %>
              </p>
              <% } %>
          </div>
        </div>
      </div>

      <div style="margin-top: 20px;">
        <p><strong>Estimated Delivery:</strong>
          <%= new Date(new Date(order.orderDate).getTime() + 45 * 60000).toLocaleTimeString() %>
        </p>
      </div>
    </div>
  </div>
