                      <% } %>
                </div>

                <div class="details_block">
                  <h4>Payment Information</h4>
                  <p><strong>Method:</strong>
                    <%= order.paymentMethod %>
                  </p>
                  <%  
                  const subtotal=order.products .filter(p=> p.status !== 'Cancelled')
                  .reduce((total, p) => total + (p.price), 0);
                  const productTotal=productDetails.price;
                  const taxRate=0.1; const productTax=productTotal * taxRate;
                  const totalproductTotal = productTotal+productTax
                  const shippingCharge=5; 
                  const totalWithShippingAndTax=totalproductTotal +shippingCharge ; 
                  let orderTotalAmount=order.totalAmount;
                  let updatedOrderTotal = 0;
                  order.products.forEach(product => {
                  if (product.status === 'Cancelled') {
                  updatedOrderTotal += product.price;}});
                  orderTotalAmount-=updatedOrderTotal
                  const discount = subtotal+shippingCharge+productTax-orderTotalAmount;
                    %>
                    <p> <strong>shipping charge</strong> ₹<%= shippingCharge.toFixed(2) %></p> 
                    <p> <strong>discount</strong> ₹<%= discount.toFixed(2) %></p> 
                 <p><strong>Order Total:</strong> ₹<%= orderTotalAmount.toFixed(2) %></p>
                </div>
              </div>

