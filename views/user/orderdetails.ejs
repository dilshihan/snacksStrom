            <%= productDetails.status %>
          </span>
          <!-- Track Order Button -->
          <% const isAllCancelledOrDelivered = order.products.some(product => product.status === 'Cancelled' || product.status === 'Delivered') %>
          <% if (isAllCancelledOrDelivered) { %>
            <button class="track-btn" id="trackOrderBtn" style="display: none;">Track Order</button>
          <% }else { %>
            <button class="track-btn" id="trackOrderBtn">Track Order</button>
          <% } %>
          
        </div>

        <% if (productDetails) { %>
          <div class="product_details">
            <div class="product_image">
              <img src="/uploads/<%= productDetails.productId.image[0] %>" alt="Product Image">
            </div>
            <div class="product_info">
              <h4>
                <%= productDetails.productId.name %>
              </h4>
              <p><strong>Price:</strong> ₹<%= productDetails.price.toFixed(2) %>
              </p>
              <p><strong>Quantity:</strong>
                <%= productDetails.quantity %>
              </p>


              <% const productTotal=productDetails.price;
               const taxRate=0.1; const productTax=productTotal * taxRate;
               const totalWithShippingAndTax=productTotal+productTax
              
                %>
               
               <p><strong>tax:</strong> ₹<%= productTax.toFixed(2) %>
                  <p class="final_total"><strong>Total for this product:</strong> ₹<%=
                      totalWithShippingAndTax.toFixed(2) %>
                  </p>
            </div>
          </div>
          <% } else { %>
            <p>Product details not found.</p>
            <% } %>
              <div class="details_section">
                <div class="details_block">
                  <h4>Shipping Address</h4>
                  <% if (order.shippingAddress) { %>
                    <p><strong>Name:</strong>
                      <%= order.shippingAddress.fullname %>
                    </p>
                    <p><strong>Phone:</strong>
