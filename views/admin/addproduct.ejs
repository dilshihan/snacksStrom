                    <% categories.forEach(category => { %>
                        <option value="<%= category.name.toLowerCase() %>"><%= category.name %></option>
                    <% }); %>
                </select>
                <div class="error-message" id="categoryError"></div>
            </div>
            

            <div class="form-group">
