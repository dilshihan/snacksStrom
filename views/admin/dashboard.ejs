                            </svg>
                        </div>
                    </div>
                    <h3><%= stats.totalProductsSold %></h3>
                    <div class="stat-change <%= parseFloat(stats.conversionRate) >= 0 ? 'positive-change' : 'negative-change' %>">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                        Conversion Rate: <%= stats.conversionRate %>%
                    </div>
                </div>
            </div>

            <!-- Chart Section -->
            <div class="chart-section">
                <div class="chart-header">
                    <h3 class="chart-title">Sales & Orders Overview</h3>
                    <div class="chart-period">
                        <button id="dailyBtn" class="period-btn active">Daily</button>
                        <button id="weeklyBtn" class="period-btn">Weekly</button>
                        <button id="monthlyBtn" class="period-btn">Monthly</button>
                        <button id="yearlyBtn" class="period-btn">Yearly</button>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="salesChart" 
                        data-labels="<%= JSON.stringify(graphData.labels) %>"
                        data-orders="<%= JSON.stringify(graphData.orders) %>"
                        data-revenue="<%= JSON.stringify(graphData.revenue) %>"
                        data-period="<%= graphData.period || 'daily' %>">
                    </canvas>
                </div>
            </div>

            <!-- Top Products and Categories Section -->
            <div class="products-categories-container">
                <!-- Top Products -->
                <div class="data-card">
                    <h3>Top Selling Products</h3>
                    <div style="overflow-x: auto;">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th style="text-align: center;">Units</th>
                                    <th style="text-align: right;">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (topProducts && topProducts.length > 0) { %>
                                    <% topProducts.forEach((product) => { %>
                                        <tr>
                                            <td>
                                                <div class="product-row">
                                                    <div class="product-image">
                                                        <% if (product.productInfo && product.productInfo.image && product.productInfo.image.length > 0) { %>
                                                            <img src="/uploads/<%= product.productInfo.image[0] %>" alt="<%= product.productName %>">
                                                        <% } else { %>
                                                            <div class="product-image-placeholder">
                                                                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                                </svg>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                    <div class="product-details">
                                                        <div class="product-name"><%= product.productName %></div>
                                                        <div class="product-meta">
                                                            <span>Price: â‚¹<%= product.totalRevenue.toFixed(2) %></span>
                                                            <% if (product.productInfo) { %>
                                                                <span class="product-category"><%= product.productInfo.category %></span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="text-align: center;">
                                                <span class="sales-badge units-badge"><%= product.totalSold %></span>
                                            </td>
                                            <td style="text-align: right;">
                                                <span class="revenue-badge">â‚¹<%= product.totalRevenue.toFixed(2) %></span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" style="text-align: center;">No products data available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Top Categories -->
                <div class="data-card">
                    <h3>Top Categories</h3>
                    <div style="overflow-x: auto;">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th style="text-align: center;">Units</th>
                                    <th style="text-align: right;">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (topCategories && topCategories.length > 0) { %>
                                    <% topCategories.forEach((category) => { %>
                                        <tr>
                                            <td>
                                                <div class="category-row">
                                                    <div class="category-icon">
                                                        <%= category._id.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <div class="product-name"><%= category._id %></div>
                                                </div>
                                            </td>
                                            <td style="text-align: center;">
                                                <span class="sales-badge units-badge"><%= category.totalSold %></span>
                                            </td>
                                            <td style="text-align: right;">
                                                <span class="revenue-badge">â‚¹<%= category.totalRevenue.toFixed(2) %></span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" style="text-align: center;">No category data available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
        
