                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="<%= parseFloat(stats.userChange) >= 0 ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>" />
                        </svg>
                        <%= parseFloat(stats.userChange) >= 0 ? '+' : '' %><%= stats.userChange %>% from last month
                    </div>
                </div>

                <!-- Revenue -->
                <div class="stat-card revenue-card">
