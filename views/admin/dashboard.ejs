    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const canvas = document.getElementById('salesChart');
            const ctx = canvas.getContext('2d');
            let chart;
            const labels = JSON.parse(canvas.dataset.labels);
            const orderData = JSON.parse(canvas.dataset.orders);
            const revenueData = JSON.parse(canvas.dataset.revenue);
            
            function initChart(labels, orderData, revenueData) {
             
                if (chart) {
                    chart.destroy();
                }
                
                chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Orders',
                                data: orderData,
                                borderColor: '#8b5cf6', 
                                backgroundColor: 'rgba(139, 92, 246, 0.1)',
                                tension: 0.3,
                                yAxisID: 'y',
                                pointBackgroundColor: '#8b5cf6',
                                pointRadius: 4,
                                borderWidth: 3
                            },
                            {
                                label: 'Revenue (â‚¹)',
                                data: revenueData,
                                borderColor: '#10b981', 
                                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                                tension: 0.3,
                                yAxisID: 'y1',
                                pointBackgroundColor: '#10b981',
                                pointRadius: 4,
                                borderWidth: 3
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false,
                        },
                        scales: {
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Orders'
                                }
                            },
                            y1: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                grid: {
                                    drawOnChartArea: false,
                                },
                                title: {
                                    display: true,
                                    text: 'Revenue (â‚¹)'
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.dataset.label === 'Revenue (â‚¹)') {
                                            label += 'â‚¹' + context.parsed.y.toFixed(2);
                                        } else {
                                            label += context.parsed.y;
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }
            initChart(labels, orderData, revenueData);
        
            const buttons = {
                daily: document.getElementById('dailyBtn'),
                weekly: document.getElementById('weeklyBtn'),
                monthly: document.getElementById('monthlyBtn'),
                yearly: document.getElementById('yearlyBtn')
            };
            
            function setActiveButton(activeButton) {
                Object.values(buttons).forEach(button => {
                    button.classList.remove('bg-blue-600', 'text-white', 'active-period');
                    button.classList.add('bg-gray-200', 'text-gray-700');
                });
                
                activeButton.classList.remove('bg-gray-200', 'text-gray-700');
                activeButton.classList.add('bg-blue-600', 'text-white', 'active-period');
            }
            
            function fetchChartData(period) {
                fetch(`/admin/dashboard/chart-data?period=${period}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        initChart(data.labels, data.orders, data.revenue);
                    })
                    .catch(error => {
                        console.error('Error fetching chart data:', error);
                    });
            }
            
            buttons.daily.addEventListener('click', function() {
                setActiveButton(this);
                fetchChartData('daily');
            });
            
            buttons.weekly.addEventListener('click', function() {
                setActiveButton(this);
                fetchChartData('weekly');
            });
            
            buttons.monthly.addEventListener('click', function() {
                setActiveButton(this);
                fetchChartData('monthly');
            });
            
            buttons.yearly.addEventListener('click', function() {
                setActiveButton(this);
                fetchChartData('yearly');
            });
        });
    </script>